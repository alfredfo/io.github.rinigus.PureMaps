{
    "app-id": "io.github.rinigus.PureMaps",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "io.github.rinigus.PureMaps",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--talk-name=org.osm.scout.server1",
        /* monitor availibility of OSM Scout Server */
        "--talk-name=org.freedesktop.DBus",
        "--socket=pulseaudio",
        /* geoclue support */
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],
    "cleanup": ["/usr/include", "/usr/tests", "/usr/lib/*/libqmapboxgl.a",
                "/usr/lib/libqmapboxgl.a", "/usr/lib/pkgconfig", "/opt",
                "/lib/*.a", "/lib/*.la"],
    "rename-icon": "pure-maps", 
    "modules": [
        {
            "name": "nemodbus",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "mkdir -p /app/lib/qml",
                "ln -s /app/usr/lib/qml/Nemo /app/lib/qml",
                "ln -s /app/usr/lib/lib* /app/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.merproject.org/mer-core/nemo-qml-plugin-dbus/-/archive/2.1.20/nemo-qml-plugin-dbus-2.1.20.tar.gz",
                    "sha256": "d52b97d700ee17e3f20b1dcb84c58502d54d12fcec487a5da22061298f811075"
                }
            ]
        },
        {
            "name": "pyotherside",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "ln -s /app/usr/lib/qml/io /app/lib/qml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/thp/pyotherside/archive/1.5.3.tar.gz",
                    "sha256": "00049d5f42cac448368bc2a521edb8de36bb6d2a624e195b7f1004236758b805"
                }
            ]
        },
        {
            "name": "python3-pyxdg",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} pyxdg"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/47/6e/311d5f22e2b76381719b5d0c6e9dc39cd33999adae67db71d7279a6d70f4/pyxdg-0.26.tar.gz",
                    "sha256": "fe2928d3f532ed32b39c32a482b54136fe766d19936afc96c8f00645f9da1a06"
                }
            ]
        },
        {
            "name": "mapbox-gl-native-qt",
            "buildsystem": "simple",
            "build-commands": [
                "cp mapbox-gl-native-lib.pro mapbox-gl-native",
                "qmake mapbox-gl-native/mapbox-gl-native-lib.pro",
                "make INSTALL_ROOT=/app install"
            ],
            "post-install": [
                "ln -s /app/usr/lib/*/libqmapboxgl.a /app/usr/lib"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rinigus/pkg-mapbox-gl-native.git",
                    "branch": "sfos",
                    "commit": "13e64eab61e34eddd698ca65ff8b873782c864ee"
                }
            ]
        },
        {
            "name": "mapbox-gl-qml",
            "buildsystem": "qmake",
            "config-opts": [
                "INCLUDEPATH+=/app/usr/include",
                "LIBS+=-L/app/usr/lib"
            ],
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "ln -s /app/usr/lib/qml/MapboxMap /app/lib/qml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/rinigus/mapbox-gl-qml/archive/1.5.0.1.tar.gz",
                    "sha256":  "71a2b0e527166930f0ac6986549c9de029adb30cf032089fbb8f61206bc5bbb2"
                }
            ]
        },
        {
            "name": "extra-cmake-modules",
            "cleanup-platform": ["*"],
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DENABLE_TESTING=OFF" ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.kde.org/extra-cmake-modules.git",
                    "branch": "v5.55.0",
                    "commit": "f8c5a482e3571c185f9b759b157985528b6baf91"
                }
            ]
        },
        {
            "name": "kirigami",
            "config-opts": ["-DENABLE_TESTING=OFF", "-DPLASMA_ENABLED=OFF"],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.kde.org/kirigami.git",
                    "branch": "master",
                    "commit": "ace5d2262c900a11f2e2425a80ff585a22f5c793"
                }
            ]
        },
        {
            "name": "qmlrunner",
            "buildsystem": "qmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rinigus/qmlrunner.git",
                    "commit": "490244ebd7c7e2d13d00218b9a5e9f10fa9f5e18"
                }
            ]
        },
        {
            "name": "mimic",
            "config-opts": [
                "--with-audio=none"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/MycroftAI/mimic/archive/1.2.0.2.tar.gz",
                    "sha256": "6adcc9911b09d6e9513add41ad9dfc0893ece277f556419869520a0f0708c102"
                }
            ]
        },
        {
            "name": "pure-maps",
            "buildsystem": "simple",
            "build-commands": [
                "make PREFIX=/app flathub-install-kirigami"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/rinigus/pure-maps.git",
                    "commit": "49988bb2cd92e88b58bcd574644c9da9ce5baa11"
                },
                {
                    "type": "file",
                    "path": "apikeys.py",
                    "dest-filename": "tools/apikeys.py"
                }
            ]
        }
    ]
}
